<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

    <RelativeLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/grid_item_name"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:text="Track name" />

        <TextView
            android:id="@+id/grid_item_length"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grid_item_name"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="34dp"
            android:layout_toStartOf="@+id/grid_item_duration"
            android:text="length" />

        <TextView
            android:id="@+id/grid_item_duration"
            android:layout_width="165dp"
            android:layout_height="20dp"
            android:layout_below="@+id/grid_item_name"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="93dp"
            android:layout_marginBottom="8dp"
            android:text="time" />

        <Button
            android:id="@+id/grid_item_view"
            android:layout_width="41dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="45dp"
            android:text="view" />

        <Button
            android:id="@+id/grid_item_delete"
            android:layout_width="41dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="214dp"
            android:layout_marginEnd="0dp"
            android:text="delete" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>